{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "GDP Per Capita Growth - UK vs Peer countries",
    "subtitle": ["1990 = 100"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 400,
  "height": 300,
  "config": {
    "font": "Circular Std",
    "view": {"stroke": "transparent"},
    "axisX": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "grid": false,
      "labelAngle": 0,
      "labelColor": "#676A86",
      "labelOpacity": 0.7,
      "orient": "bottom",
      "tickColor": "#676A86",
      "tickCount": 10,
      "tickOpacity": 0.5,
      "title": "",
      "titleAlign": "center",
      "titleAnchor": "middle",
      "titleColor": "#676A86",
      "titleFontSize": 12,
      "titleOpacity": 0.8,
      "titleY": -15
    },
    "axisY": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelColor": "#676A86",
      "labelOpacity": 0.7,
      "labelPadding": 5,
      "tickColor": "#676A86",
      "tickCount": 8,
      "tickOpacity": 0.5,
      "ticks": false,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#676A86",
      "titleFontSize": 12,
      "titleOpacity": 0.8,
      "titleX": 0,
      "titleY": -7
    }
  },
  "data": {"url": "https://raw.githubusercontent.com/andreacorreaj/GD_UK/main/GDP_PC_Growth.csv"},
 

 
  "mark": "line", 
  "encoding": {
    "x": {"field": "Year", "type": "temporal"},
    "y": {"field": "Value", "type": "quantitative", "title":"",  "scale": {"domain": [80,160]}},
    "color": {"field": "Country", "type": "nominal"}
  }
}
