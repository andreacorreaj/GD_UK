{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Construction",
    "subtitle": ["Percentage"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 400,
  "height": 300,
  "config": {
    "font": "Circular Std",
    "view": {"stroke": "transparent"},
    "axisX": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "grid": false,
      "labelAngle": 0,
      "labelColor": "#676A86",
      "labelOpacity": 0.7,
      "orient": "bottom",
      "tickColor": "#676A86",
      "tickCount": 10,
      "tickOpacity": 0.5,
      "title": "",
      "titleAlign": "center",
      "titleAnchor": "middle",
      "titleColor": "#676A86",
      "titleFontSize": 12,
      "titleOpacity": 0.8,
      "titleY": -15
    },
    "axisY": {
      "domainColor": "#676A86",
      "domainOpacity": 0.5,
      "gridColor": "#676A86",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelColor": "#676A86",
      "labelOpacity": 0.7,
      "labelPadding": 5,
      "tickColor": "#676A86",
      "tickCount": 8,
      "tickOpacity": 0.5,
      "ticks": false,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#676A86",
      "titleFontSize": 12,
      "titleOpacity": 0.8,
      "titleX": 0,
      "titleY": -7
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/andreacorreaj/GD_UK/main/Productivity_Industry_Peers_Construction.csv"
  },
  "layer":[
{
  "mark": "line"
},
{
  "mark": {
    "type": "text",
    "align": "left",
    "dx": 5
  },
  "transform": [
    {
      "filter": "datum.Country == 'United Kingdom' && year(datum.Year) == 2023"
    }
  ],
  "encoding": {
    "text": {"field":"Country"}
  }
}
  ],
  "encoding": {
    "x": {"field": "Year", "type": "temporal"},
    "y": {"field": "Value", "type": "quantitative", "title": ""},
    "color": {
      "condition": [
        {"test": "datum.Country == 'United Kingdom'", "value": "#179fdb"}
      ],
      "value": "rgba(0,0,0,0.15)"
    },
    "detail": {"field": "Country"}
  }
}
